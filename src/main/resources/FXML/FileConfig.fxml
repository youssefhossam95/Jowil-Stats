<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <VBox fx:id="contentVbox">
        <HBox fx:id="mainHBox">
            <JFXTextField fx:id="mainFileTextField" labelFloat="true"  promptText="Students Responses File Path" />
            <StackPane fx:id="mainFileChooser">
                <FontAwesomeIconView fx:id="mainChooserIcon" styleClass="FolderIcon" fill="#157880" glyphName="FOLDER" ></FontAwesomeIconView>
            </StackPane>


        </HBox>
        <HBox fx:id="answersHBox">
            <JFXTextField fx:id="answersFileTextField" labelFloat="true" promptText="Answer Key File Path" focusColor="#157880"/>
            <StackPane fx:id="answersFileChooser">
                <FontAwesomeIconView fx:id="answersChooserIcon" styleClass="FolderIcon" fill="#157880" glyphName="FOLDER" ></FontAwesomeIconView>
            </StackPane>

        </HBox>

        <AnchorPane fx:id="combosAnchor">
            <JFXComboBox fx:id="identifierCombo" labelFloat="true" promptText="Identifier Column" focusColor="#157880"/>
            <JFXComboBox fx:id="formCombo" labelFloat="true" promptText="Form Column" focusColor="#157880"/>
        </AnchorPane>

        <JFXToggleButton fx:id="manualModeToggle" text="Manual Configuration" toggleColor="#157880" unToggleColor="#157880"  />
        </VBox>

        <JFXButton fx:id="nextButton" text="Next">
        </JFXButton>

   </children>
</AnchorPane>
